#include<stdio.h>
#include<string.h>
int main()
{
        int i,j=0,k,len;
        char str[20],ustr[40],dl,astr[20];
        printf("Enter the size of the binary string : \n");
        scanf("%d",&len);
        printf("Now enter the string charecter wise : \n");
        scanf("%s",&str);
        printf("Enter the delimiter : \n");
        scanf(" %c",&dl);
        printf("dl : %c", dl);
        printf("\nByte stuffing ......\n");
        ustr[0]=dl;
        j = 1;
        for(i=0;i<len;i++){
                if(str[i]==dl){
                        ustr[j]=ustr[j+1]=dl;
                        j = j+2;
                }
                else{
                        ustr[j]=str[i];
                        j++;
                }
        }
        ustr[j] = dl;
        j++;
        printf("\nstuffing completed\n");
        for(i=0;i<j;i++) printf(" %c",ustr[i]);
        printf("\nDestuffing in process : \n");
        i=0;len = j;j=0; for(i=1;i<len-1;i++){
                if(ustr[i]==dl){
                        astr[j]=dl;
                        j++;
                        i++;
                }
                else{
                        astr[j]=ustr[i];
                        j++;
                }
        }
        printf("\nAfter destuffing....:\n");
        for(i=0;i<j;i++) printf(" %c",astr[i]);
}
