//Bit stuff and destuff
#include<stdio.h>
void main(){
	int i,n,b[100],d[100],k=0,m=0,count=0;
	printf("Enter the size of the string :");
	scanf("%d",&n);
	int a[n];
	printf("Enter the  bit string to stuff :");
	for(i=0;i<n;i++){
		scanf("%d",&a[i]);
	}
	for(i=0;i<n;i++){
		if(a[i]==1){
			count++;
		}
		else{
			count=0;
		}
		b[k++]=a[i];
		if(count==5){
			b[k++]=0;
			count=0;
		}
	}
	printf("The stuffed bits are : ");
	for(i=0;i<k;i++){
		printf("%d ",b[i]);
	}
	count=0;
	for(i=0;i<k;i++){
		if(b[i]==1){
			d[m++]=b[i];
			count++;
		}
		else{
			if(count!=5){
			    d[m++]=b[i];
			}
			count=0;
		}
    }
    printf("\nThe destuufed bits are: ");
    for(i=0;i<m;i++){
    	printf("%d ",d[i]);
	}
}
