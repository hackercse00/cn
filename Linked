#include<stdio.h>
#include<string.h>
struct str{
        char name[20];
        int len,alloc,next[50];
};
void insert();
void delete();
void traverse();
int search();
struct str f[100];
int b[100],count,n;
void main(){
        int i,j,c;
        printf("Enter the number of blocks : ");
        scanf("%d",&n);
        f[n];
        b[n];
        for(i=0;i<n;i++){
                b[i]=-1;
        }
        printf("1.INSERT\n2.DELETE\n3.TRAVERSE\n");
        while(1){
        	    printf("Choose a option : ");
                scanf("%d",&c);
                switch(c){
                        case 1:
                                insert();
                                break;
                        case 2:
                                delete();
                                break;
                        case 3:
                                traverse();
                                break;
                        case 0:
                                return;
                        default:
                                printf("Select a valid option\n");
                                break;
                }
        }
}
void insert(){
    int i,j,flag=0;
    printf("Enter the file name : ");
    scanf("%s",f[count].name);
    if(search()==1){
        printf("File name already exists\n");
        return;
    }
    printf("Enter the length of the file : ");
    scanf("%d",&f[count].len);
    for(i=0;i<n;i++){
        if(b[i]==-1){
            if(flag!=f[count].len){
                f[count].next[flag++]=i;
			}
			else{
				break;
			}
	    }
	}
	if(flag!=f[count].len){
		printf("Insufficient storage\n");
	}
	else{
		for(i=0;i<flag;i++){
			b[f[count].next[i]]=1;
		}
        f[count++].alloc=1;
        printf("File inserted\n");
        return;
    }
}
void delete(){
	char c[20];
	int i,j;
	printf("Enter the name of the file to delete : ");
	scanf("%s",&c);
	for(i=0;i<count;i++){
		if(strcmp(c,f[i].name)==0){
			for(j=0;j<f[i].len;j++){
				b[f[i].next[j]]=-1;
			}
			f[i].alloc=0;
			printf("File deleted succesfully\n");
			return;
		}
    }
	printf("File is not found\n");
    }

void traverse(){
	int i,j;
	printf("Filename\tLength\t\tLocation\n");
	for(i=0;i<count;i++){
		if(f[i].alloc==1){
			printf("%s\t\t%d\t\t",f[i].name,f[i].len);
			for(j=0;j<f[i].len-1;j++){
				printf("%d-->",f[i].next[j]);
			}
			printf("%d\n",f[i].next[f[i].len-1]);
		}
	}
}
int search(){
	int i;
	for(i=0;i<count;i++){
		if(f[count].name==f[i].name){
			return 1;
		}
	}
	return 0;
}
